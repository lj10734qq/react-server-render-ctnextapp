    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "启动程序",
            "program": "${workspaceRoot}/server",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/nodemon", // 或者 node-dev
            "restart": true,
            "console": "integratedTerminal",
            "skipFiles": [
            "${workspaceRoot}/node_modules/**/*.js",
            "<node_internals>/**/*.js"
            ]
        }
    ]
}